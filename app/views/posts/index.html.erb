<h1>My blog</h1>
<% @posts.each do |post| %>
	<h2><%=post.title %></h2>
	<p><%=post.content %></p>
	<small><%=post.created_at %></small>
    </br>
    <small><%=link_to 'Edit', edit_post_path(post) %>|
    <%=link_to 'Show', post_path(post) %>|
    <%=link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></small>
	</br>
<% end %>
</br> </br>
<%=link_to 'New Post', new_post_path %>